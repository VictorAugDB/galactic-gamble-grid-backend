{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
        "warn",
        {
            "vars": "all",
            "varsIgnorePattern": "^_",
            "args": "after-used",
            "argsIgnorePattern": "^_"
        }
    ],
    "camelcase": "off",
    "no-useless-constructor": "off"
  }
}